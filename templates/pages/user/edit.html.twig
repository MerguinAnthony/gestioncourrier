{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card p-4 shadow-lg">
        <h1 class="text-center mb-4">Gestion des utilisateurs</h1>

            <!-- Ajout du bouton retour -->
        <div class="row my-5">
            <div class="col">
                <a href="javascript:history.go(-1)" class="btn btn-primary">Retour</a>
            </div>
        </div>
        <hr class="w-75 mx-auto my-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="h4 mb-3">Modifier un utilisateur</h2>
                {{ form_start(form) }}
                    <div class="mb-3">
                        <label for="roles">Rôle</label>
                        <select class="form-select" name="roles" id="roles">
                            <option value="1">Employé</option>
                            <option value="2">Administrateur</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
